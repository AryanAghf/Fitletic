<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fitletic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text styles -->
    <style name="H1" parent="TextAppearance.MaterialComponents.Headline1"></style>
    <style name="H2" parent="TextAppearance.MaterialComponents.Headline2"></style>
    <style name="H3" parent="TextAppearance.MaterialComponents.Headline3"></style>
    <style name="H4" parent="TextAppearance.MaterialComponents.Headline4"></style>
    <style name="H5" parent="TextAppearance.MaterialComponents.Headline5"></style>
    <style name="H6" parent="TextAppearance.MaterialComponents.Headline6"></style>
    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1"></style>
    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2"></style>
    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1"></style>
    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2"></style>
    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption"></style>
    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Button"></style>
    <style name="Overline" parent="TextAppearance.MaterialComponents.Overline"></style>
    <!-- Button Styles-->
    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="background">@color/transparent</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="Buton.Small" parent="Widget.AppCompat.Button.Small"></style>
    <style name="Buton.Colored" parent="Widget.AppCompat.Button.Colored"></style>
    <style name="Buton.Borderless" parent="Widget.AppCompat.Button.Borderless"></style>
    <style name="Buton.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored"></style>

</resources>